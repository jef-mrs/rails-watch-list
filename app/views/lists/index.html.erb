
<div class="banner mb-5" style="background-image: url('/assets/images/cinema2.jpg') height: 300px;">
  <div class="container">
    <h1 class='text-center'>My Lists</h1>
  </div>
</div>


<div class="cards m-4" >
  <% @lists.each do |list| %>
    <% if list.photos.count > 0 %>
      <% photo = list.photos.first %>
      <div class="card-category" style="background-image: url('<%= cl_image_path photo.key, width: 300, crop: :fill  %>'); background-size: cover;">
        <%# <div class="d-bloc"> %>
          <div class='d-flex justify-content-center'>
            <%= link_to list_path(list), class: "list-link text-center" do %>
              <h4 style="font-weight: bolder; font-size: 40px"><%= list.name.upcase %></h4>
            <% end %>
          </div>
          <div class="d-flex flex-row-reverse">
            <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "list-link pos 'text-end'" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        <%# </div> %>
      </div>
    <% else %>
      <div class="card-category p-4" style="background-image: url('<%= image_path 'cinema.jpg', width: 300, crop: :fill  %>'); background-size: cover;">
        <%= link_to list_path(list), class: "list-link" do %>
          <h4><%= list.name.upcase %></h4>
        <% end %>
        <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "list-link pos text-end" do %>
              <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
 <% end %>
</div>
